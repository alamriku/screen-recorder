{
  "manifest_version": 3,
  "name": "Clippy - Screen Recorder",
  "description": "An effective tool for high quality video record from active tab, desktop or webcam",
  "version": "2.1.2",
  "icons": {
    "512": "icons/512.png",
    "128": "icons/128.png",
    "64": "icons/64.png",
    "32": "icons/32.png"
  },
  "action": {
    "default_title": "Clippy - Screen Recorder",
    "default_popup": "popup.html"
  },
  "permissions": [
    "desktopCapture",
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "css": [
        "content.css"
      ],
      "js": [
        "content.js"
      ],
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_end"
    },
    {
      "js": [
        "parserOnClippy.js"
      ],
      "matches": [
        "http://localhost:8878/*"
      ],
      "run_at": "document_end"
    }
  ]
}
